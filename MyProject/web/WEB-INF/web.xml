<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>New</servlet-name>
        <servlet-class>controller.lecturer.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleController</servlet-name>
        <servlet-class>controller.instructor.ScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>controller.instructor.AttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTableController</servlet-name>
        <servlet-class>controller.student.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentListController</servlet-name>
        <servlet-class>controller.instructor.StudentListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradeController</servlet-name>
        <servlet-class>controller.student.GradeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendedController</servlet-name>
        <servlet-class>controller.instructor.ViewAttendedController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScoreController</servlet-name>
        <servlet-class>controller.student.ScoreController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleController</servlet-name>
        <url-pattern>/instructor/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/instructor/att</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentListController</servlet-name>
        <url-pattern>/instructor/studentlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradeController</servlet-name>
        <url-pattern>/student/courses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendedController</servlet-name>
        <url-pattern>/instructor/attended</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScoreController</servlet-name>
        <url-pattern>/student/score</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
